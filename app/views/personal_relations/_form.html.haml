= form_for [@person.becomes(Person), @personal_relation] do |f|
  
  - if @personal_relation.errors.any? 
    #errorExplanation
    
      %h2
        = pluralize(@personal_relation.errors.count,'error')
        have prevented this personal relation from being saved.
        
      %ul
        - @personal_relation.errors.full_messages.each do |msg|
          %li
            = msg
            
            
  .field
    = f.label :related_person_id
    = f.collection_select :related_person_id, Person.all, :id, :first_and_last_name, :prompt => true
    
  .field
    = f.label :relation_type_id
    = f.collection_select :relation_type_id, RelationType.all, :id, :name, :prompt => true
    
  .actions
    = f.submit 'Save'
    
        
        