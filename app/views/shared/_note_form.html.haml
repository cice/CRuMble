#noteForm
  = form_for(Note.new(:noted => noted), :url => notes_path(:format => :json), :remote => true, :html => {:'data-type' => 'json'}) do |f|
    = f.hidden_field :noted_id
    = f.hidden_field :noted_type
    = f.hidden_field :content_type, :value => "plain"
    
    .field
      = f.label :content, "blabla"
    .field
      = f.text_area :content
    .button
      = f.submit 'Save'
      = link_to 'Cancel', '#', :id => 'cancel_note'
